<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.lenovo.scarnersdice.multi"
    android:background="@drawable/imgmulti">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button6"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:background="@drawable/pass2" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button7"
        android:layout_marginBottom="41dp"
        android:background="@drawable/roll"
        android:layout_above="@+id/button9"
        android:layout_alignStart="@+id/button8" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button8"
        android:background="@drawable/roll2"
        android:layout_marginTop="45dp"
        android:layout_below="@+id/button6"
        android:layout_alignStart="@+id/button6" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button9"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/button7"
        android:layout_alignEnd="@+id/button7"
        android:background="@drawable/pass" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Score"
        android:id="@+id/textView8"
        android:textSize="40dp"
        android:layout_alignTop="@+id/button8"
        android:layout_alignParentStart="true"
        android:rotation="180"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Score"
        android:id="@+id/textView9"
        android:textSize="40dp"
        android:layout_alignTop="@+id/button7"
        android:layout_alignParentEnd="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:background="@drawable/wait"
        android:layout_centerVertical="true"
        android:layout_toStartOf="@+id/textView9" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:id="@+id/textView10"
        android:textSize="50dp"
        android:layout_below="@+id/textView9"
        android:layout_alignStart="@+id/textView9" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:id="@+id/textView11"
        android:rotation="180"
        android:textSize="50dp"
        android:layout_above="@+id/textView8"
        android:layout_toStartOf="@+id/imageView" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Your Turn"
        android:id="@+id/textView12"
        android:layout_above="@+id/button7"
        android:layout_centerHorizontal="true"
        android:textSize="15dp"
        android:textColor="#fb0e0e" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" "
        android:rotation="180"
        android:id="@+id/textView13"
        android:layout_below="@+id/button8"
        android:layout_alignEnd="@+id/textView12"
        android:textColor="#FFFB0E0E"
        android:textSize="15dp" />

</RelativeLayout>
